<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoUserActivity"
        android:background="@drawable/background"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
            android:layout_marginTop="50dp"
        >
        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/barlow_regular"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_edit_unselected"
            android:backgroundTint="@color/gray_light_gt"
            />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/barlow_regular"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_edit_unselected"
            android:backgroundTint="@color/gray_light_gt"
            />

        <TextView
            android:id="@+id/tvNumCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/barlow_regular"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_edit_unselected"
            android:backgroundTint="@color/gray_light_gt"
            />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/barlow_regular"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_edit_unselected"
            android:backgroundTint="@color/gray_light_gt"
            />
        <TextView
            android:id="@+id/tvAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/barlow_regular"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_edit_unselected"
            android:backgroundTint="@color/gray_light_gt"
            />

        <TextView
            android:id="@+id/tvSigne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/barlow_regular"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_edit_unselected"
            android:backgroundTint="@color/gray_light_gt"
            />
        <TextView
            android:id="@+id/tvChinese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/barlow_regular"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_edit_unselected"
            android:backgroundTint="@color/gray_light_gt"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:weightSum="1"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/imageZodiac"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:padding="50dp"
                />
            <ImageView
                android:id="@+id/imageChines"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:padding="50dp"
                />
        </LinearLayout>







    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>